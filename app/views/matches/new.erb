<div class="container">

  This is a game!

    <h1><%= @product.name %></h1>

  <img src="<%= @product.photo %>" class="photo">


  <% if @product.descriptions %>
    <ul>
      <% @product.descriptions.each do |description| %>
        <li><%= description.content %></li>
      <% end %>
    </ul>
  <% end %>


  <h3>Can you guess the price without going over?</h3>

  <form action="/games/<%= @game.id %>/matches" method="Post">
    $<input type="text" name="player1_guess" placeholder="<%= @game.player1 %> Guess...">
    $<input type="text" name="player2_guess" placeholder="<%= @game.player2 %> Guess...">
    <input type="submit" value="ENTER">
  </form>

</div>
