<div class="container">


  <h1><%= @product.name %></h1>

  <img src="<%= @product.photo %>" class="photo">

  <h1>$<%= @product.price %></h1>

  <% if @product.descriptions %>
    <ul>
      <% @product.descriptions.each do |description| %>
        <li><%= description.content %></li>
      <% end %>
    </ul>
  <% end %>



  <p><a href="/products/new">Add another product</a></p>

  <h3><a href="/games/new">Let's play a game</a></h3>

</div>
